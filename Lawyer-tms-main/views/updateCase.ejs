    <div class="container">
        <h3>تعديل بيانات القضية</h3>
        <div class="updateLawyer">
            <form action="/api/cases/updateCase/<%= case1._id %>" method="POST" enctype="multipart/form-data" id="caseForm"><br>
                <div class="row" dir="rtl">
                    <div class="row" dir="rtl">
                        <div class="col-xl-6" dir="rtl">
                            <label for="" class="labelInput">رقم القضية</label>
                            <input type="text" value="<%= case1.caseNumber %>" name="caseNumber" id="caseNumber" class="form-control1 inputCase"><br>

                            <label for="" class="labelInput">نوع القضية</label>
                            <input type="text" value="<%= case1.caseType %>" name="caseType" id="caseType" class="form-control1 inputCase">

                        </div>
                        <div class="col-xl-6">
                            <label for="" class="labelInput">تاريخ القضية</label>
                            <input type="date" value="<%= case1.caseDate.toISOString().split('T')[0] %>" name="caseDate" id="caseDate" class="form-control1 inputCase">
                            <br>
                            <label for="" class="labelInput">المحكمة</label>
                            <input type="text" value="<%= case1.courtName %>" name="courtName" id="courtName" class="form-control1 inputCase">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <label for="" class="labelInput">اسم الموكل</label>
                            <input type="text" value="<%= case1.clientName %>" name="clientName" id="clientName" class="form-control1 inputCase"><br>
                            <label for="" class="labelInput">صفة الموكل</label>
                            <input type="text" value="<%= case1.clientFeature %>" name="clientFeature" id="clientFeature" class="form-control1 inputCase">

                        </div>
                        <div class="col-xl-6">
                            <label for="" class="labelInput">رقم هاتف الموكل</label>
                            <input type="text" value="<%= case1.clientTelephone %>" name="clientTelephone" id="clientTelephone" class="form-control1 inputCase"><br>
                            <label for="" class="labelInput">اسم محامي المكتب</label>
                            <input type="text" value="<%= case1.clientLawyerName %>" name="clientLawyerName" id="clientLawyerName" class="form-control1 inputCase">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            <label for="" class="labelInput">اسم الخصم &nbsp; &nbsp; &nbsp; &nbsp; </label>
                            <input type="text" value="<%= case1.opponentName %>" name="opponentName" id="opponentName" class="form-control1 inputCase">
                            <br>
                            <label for="" class="labelInput">صفة الخصم &nbsp; &nbsp; </label>
                            <input type="text" value="<%= case1.opponentFeature %>" name="opponentFeature" id="opponentFeature" class="form-control1 inputCase">
                            <br>
                            <label for="" class="labelInput">المصروفات</label>
                            <input type="number" value="<%= case1.expenses %>" name="expenses" id="expenses" min="0" class="form-control1 inputCase">
                        </div>
                        <div class="col-xl-6">
                            <label for="" class="labelInput">رقم هاتف الخصم&nbsp; &nbsp;</label>
                            <input type="text" value="<%= case1.opponentTelephone %>" name="opponentTelephone" id="opponentTelephone" class="form-control1 inputCase">
                            <br>
                            <label for="" class="labelInput">اسم محامي الخصم</label>
                            <input type="text" value="<%= case1.opponentLawyerName %>" name="opponentLawyerName" id="opponentLawyerName" class="form-control1 inputCase">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="" class="labelInput">مستندات</label>
                            <br>
                            <input type="file" value="<%= case1.files %>" multiple accept="image/*,.pdf,.doc,.docx" name="files" id="files" class="form-control1 inputCase" style="width: 70%; margin-right: 2%;">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="" class="labelInput" style="width: 23%;">ملاحظات</label><br>
                            <textarea id="description" cols="90" rows="6"><%= case1.description %></textarea>
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="buttonAddCase">تعديل</button>
                </div>
            </form>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
