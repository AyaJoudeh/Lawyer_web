                                                <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                                                <line x1="16" y1="5" x2="19" y2="8" />
                                            </svg></button>
                                        </a>
                                </div>

                                <a href="api/users/deleteUser/<%=lawyers[i]._id %>">
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" style="border-radius: 75px; position: absolute; bottom: 80%; right: 83%; bottom:78%; background: none; border: none;  ">
